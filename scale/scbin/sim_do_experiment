#!/bin/sh

scriptdir=`dirname $0`
. $scriptdir/readconfig
cd $scriptdir

logdir=${cassandra_log_dir}
n=$num_node
echo $n
rm -r /tmp/n${n}
mkdir /tmp/n${n}
./onemachine_dir_setup $1
./simulation $1
sleep 300
pkill java
cp /tmp/cass_scale/scale.log* /tmp/n${n}
i=1
while [ $i -le $n ]; do
  echo $i 127.0.0.$i >> /tmp/n${n}/machinelist
  i=`expr $i + 1`
done
cp -r /tmp/n${n} $logdir/n${n}
