#!/bin/sh

scriptdir=`dirname $0`
. $scriptdir/readconfig
cd $scriptdir

for n in 256; do
  cp scdeploy.conf.exp scdeploy.conf.$n
  echo "num_node=$n" >> scdeploy.conf.$n
  rm -r /tmp/n${n}
  mkdir /tmp/n${n}
  rm /tmp/cass_scale/scale.log
  export NODES=$n
  ./simulation scdeploy.conf.$n
  sleep 300
  pkill java
  cp /tmp/cass_scale/scale.log* /tmp/n${n}
  i=1
  while [ $i -le $n ]; do
    a=`expr \( $i - 1 \) / 255`
    b=`expr \( $i - 1 \) % 255 + 1`
    echo $i 127.0.${a}.${b} >> /tmp/n${n}/machinelist
    i=`expr $i + 1`
  done
  logdir=${cassandra_log_dir}/n${n}
  rm -r $logdir/*
  mkdir -p $logdir
  cp -r /tmp/n${n}/* $logdir
  cp /tmp/gc $logdir/gc
done
