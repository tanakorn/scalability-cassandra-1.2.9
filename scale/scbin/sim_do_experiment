#!/bin/sh

scriptdir=`dirname $0`
. $scriptdir/readconfig
cd $scriptdir

logdir=${cassandra_log_dir}
mkdir -p $logdir
rm -r $logdir/*
for n in 512; do
  cp scdeploy.conf.exp scdeploy.conf.$n
  echo "num_node=$n" >> scdeploy.conf.$n
  rm -r /tmp/n${n}
  mkdir /tmp/n${n}
  #./onemachine_dir_setup scdeploy.conf.$n
  rm /tmp/cass_scale/scale.log
  ./simulation scdeploy.conf.$n $t
  ./cpu > /tmp/cpu.${n} &
  sleep 300
  pkill java
  pkill cpu
  cp /tmp/cass_scale/scale.log* /tmp/n${n}
  i=1
  while [ $i -le $n ]; do
    a=`expr \( $i - 1 \) / 255`
    b=`expr \( $i - 1 \) % 255 + 1`
    echo $i 127.0.${a}.${b} >> /tmp/n${n}/machinelist
    i=`expr $i + 1`
  done
  cp -r /tmp/n${n} $logdir/n${n}
  cp /tmp/cpu.${n} $logdir/n${n}/cpu
  cp /tmp/gc $logdir/n${n}/gc
done
