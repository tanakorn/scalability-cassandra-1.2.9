#!/bin/sh

scriptdir=`dirname $0`
. $scriptdir/readconfig
echo $num_node
classpath=$scriptdir/../build/classes/main:$scriptdir/../build/classes/thrift:$scriptdir/../test/conf
for jar in ls $scriptdir/../lib/*.jar; do
  classpath=$classpath:$jar
done
for jar in ls $scriptdir/../build/lib/jars/*.jar; do
  classpath=$classpath:$jar
done

## @Cesar: Adding new properties
JVM_OPTS="-Dedu.uchicago.ucare.sck.adjustThreadTime=true"
## @Cesar: Done, set
JVM_OPTS="$JVM_OPTS $JVM_EXTRA_OPTS"


java $JVM_OPTS -Xmx32G -Xms32G -XX:+PrintGCDetails -XX:+PrintGCTimeStamps -XX:+PrintGCApplicationStoppedTime \
     -XX:+PrintGCApplicationConcurrentTime -Xloggc:/tmp/gc -classpath $classpath -Dobserved.nodes=$observed_nodes \
     edu.uchicago.cs.ucare.cassandra.gms.WholeClusterSimulator $num_node nome_boot.dat tok32 10 100 100 &
